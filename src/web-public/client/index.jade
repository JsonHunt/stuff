		link(rel="apple-touch-icon" 					href="/apple-touch-icon.png")
	
	body.app.noselect(ng-controller="IndexController",ng-cloak='')
		.header
			.logo ''
			.title(ng-click="goto('')") Welcome to my website
				
			div.area.username(ng-if="user") {{user.username}}
			div.area.balance(ng-if="user") ${{user.balance}}
			div.button.pay(ng-if="user", ng-click="pay('Subscription',20)") Load balance
			div.button.logout(ng-if="user", ng-click="logout()") Log-out
			div.button.signup(ng-if="!user", ng-click="signup()") Sign-up
			div.button.login(ng-if="!user", ng-click="login()") Log-in
		.nav
			.item(
				ng-class="{active: path == 'home'}"
				ng-click="goto('home')"
			) Order
			.item(
				ng-class="{active: path == 'contact'}"
				ng-click="goto('contact')"
				) Contact	
			.item(
				ng-class="{active: path == 'build-menu'}"
				ng-click="goto('build-menu')"
				) Menu Builder
			.item(
				ng-class="{active: path == 'build-zones'}"
				ng-click="goto('build-zones')"
				) Zone Builder			
				
		.content(ng-view='')
			
		.footer Copyright 2015 Integral Systems Inc.
					
