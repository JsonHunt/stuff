form.form.login
	div.form-group
		input#username.form-control(
			type='text'
			ng-model="username"
			placeholder="Username"
		)
		
	div.form-group
		input.form-control(
			type='password'
			ng-model="password"
			placeholder="Password"
		)
	
	div.buttons
		button.btn.btn-primary(
			ng-click="login()"
		) Login
		button.btn.btn-default(
			ng-click="passwordReset()"
		) I forgot my password
	
	div(ng-if="error").error {{error}}
	
