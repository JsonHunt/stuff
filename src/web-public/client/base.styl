html
	height 100%

body
	padding 0
	margin 0
	height 100%
	display flex
	flex-direction column

.noselect {
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
}

.btn
	min-width 100px

.form.center
	margin auto
	width 500px
	padding: 10px
	border: 1px solid #ccc
	background-color: #ddd

.error
	padding: 10px
	color: red
	border 1px solid red
	margin: 10px 0

.title
		border-bottom 1px solid #ccc
		padding 5px
		margin-bottom 10px
