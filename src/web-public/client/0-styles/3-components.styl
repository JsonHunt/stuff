.bar
	@extends .row
	min-height 30px
	background-color $dark
	>.title
		@extends .fill
		padding 5px 10px
		color white
		font-weight bold
	>i.fa
		color white

button
	padding 5px

.pill
	display inline
	border-radius	4px
	border 1px solid $light
	padding 5px
	margin-right 2px
	&.active
		background-color $light


.panel
	@extends .column
	border 1px solid $dark
	>.header
		// border-bottom 1px solid white
		@extends .bar
		>.title
			@extends .fill
	>.sub-header
		padding 10px
		// border-bottom 1px solid $dark

	>.body
		overflow-y auto
		position relative
		@extends .fill
		padding 10px

	>.footer
		@extends .row
		padding 5px
		text-align center
		color white
		background-color $dark

.table
	>.header
		@extends .row
		border-bottom 1px solid #6fb3f7
		.col
			@extends .center-v
			font-weight bold
			text-align: center
	>.row
		border-bottom 1px solid #ddd
		&:last-child
			border-bottom: none
		>.name, >.title
			padding-left 10px
	>.row, >.header
		>.col
			@extends .center-v
			border-right 1px solid $light
			&:last-child
				border-right none

