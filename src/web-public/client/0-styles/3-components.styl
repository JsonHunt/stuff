.list
	@extends .column
	overflow-y auto
	.item
		@extends .row, .center-v
		&.border
			border none
			border-bottom 1px solid $light
			&:last-child
				border-bottom none
			&[ng-click]:hover:not(.disabled)
				background-color $light
		.title
			@extends .fill
			padding 10px


.middle
	margin 10px auto
	width 500px
	text-align: center

.form-group
	label
		margin 10px 0 2px 0
		font-size: 12px

.error
	padding: 10px
	color: red
	border 1px solid red
	margin: 10px 0

.section.header
	padding 10px 0 5px 0
	border-bottom: 1px solid $light

.btn
	display: inline-block
	padding 10px
	border 1px solid $light
	background-color $light
	border-radius 4px

i.fa.social-icon, .social-icon
	border: 1px solid $light
	border-radius: 4px;
	padding: 10px;
	width: 50px;
	height 50px
	margin-left 2px

.button
	padding 10px 20px
	border 1px solid $medium
	background-color $dark
	color white
	text-align center
	border-radius 4px
	&.disabled
		opacity 0.5
	&.hover:hover
		background-color $medium

.ngdialog.ngdialog-theme-default
	padding-bottom: 0;
	padding-top: 0;
	display: flex;
	flex-direction: column;
	align-content: center;
	align-items: center;
	justify-content: center;

	.ngdialog-content
		width inherit
		min-width 450px
