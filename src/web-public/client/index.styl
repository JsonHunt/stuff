html
	height 100%

body
	padding 0
	margin 0
	height 100%
	display flex
	flex-direction column

.btn
	min-width 100px

.header
	background-color #CCC
	padding 10px
	display flex
	align-items center
	.logo
		width: 50px
		height: 50px
		border: 1px solid black
		margin-right 20px
	.title
		font-family 'Arial,helvetica,sans-serif'
		font-size: 20px
		flex 1
	.username
		padding 10px
	.signup, .login, .logout
		padding 10px
		border 1px solid black
		margin-left 2px
		cursor pointer
		&:hover
			background-color #DDD

.navbar
	background-color #CCC
	border-top: 1px solid white
	border-bottom: 1px solid white
	display flex
	align-items: center
	justify-content: flex-end
	.item
		padding: 10px 30px
		color black
		text-decoration none
		cursor pointer
		border-left: 1px solid white
		&:hover
			background-color #DDD
	.item.active
		background-color #AAA

.content
	flex 1
	padding 10px


.footer
	padding 10px
	color: #666
	font-size 12px
	font-weight bold
	text-transform uppercase
	text-align center
	border-top 1px solid #ccc

.form.center
	margin auto
	width 500px
	padding: 10px
	border: 1px solid #ccc
	background-color: #ddd

.error
	padding: 10px
	color: red
	border 1px solid red
	margin: 10px 0
